{
    "env": {
        "sample_name": "library",
        "sample_path": "./samples/${sample_name}"
    },
    "configurations": [
        {
            "name": "Debug default",
            "defines": [
                "__MAGIC_NUMBER__=1"
            ],
            "includePath": [
                "${workspaceFolder}/libs/mylib/include/",
                "${workspaceFolder}/include/",
                "${sample_path}/**"
            ],
            "intelliSenseMode": "linux-gcc-x64",
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "gnu17",
            "cppStandard": "gnu++14",
            "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}